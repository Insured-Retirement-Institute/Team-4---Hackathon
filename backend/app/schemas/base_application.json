{
  "description": "Base fields shared across all carrier applications. Carrier schemas extend these.",
  "common_fields": [
    {
      "field_id": "owner_first_name",
      "type": "text",
      "label": "Owner First Name",
      "required": true,
      "validation": {
        "min_length": 1,
        "max_length": 50,
        "pattern": "^[a-zA-Z' -]+$"
      }
    },
    {
      "field_id": "owner_last_name",
      "type": "text",
      "label": "Owner Last Name",
      "required": true,
      "validation": {
        "min_length": 1,
        "max_length": 50,
        "pattern": "^[a-zA-Z' -]+$"
      }
    },
    {
      "field_id": "owner_dob",
      "type": "date",
      "label": "Date of Birth",
      "required": true
    },
    {
      "field_id": "owner_ssn",
      "type": "ssn",
      "label": "Social Security Number",
      "required": true,
      "validation": {
        "pattern": "^\\d{3}-?\\d{2}-?\\d{4}$"
      }
    },
    {
      "field_id": "owner_email",
      "type": "email",
      "label": "Email Address",
      "required": true,
      "validation": {
        "pattern": "^[^@]+@[^@]+\\.[^@]+$"
      }
    },
    {
      "field_id": "owner_phone",
      "type": "phone",
      "label": "Phone Number",
      "required": true,
      "validation": {
        "pattern": "^\\+?1?[-.\\s]?\\(?\\d{3}\\)?[-.\\s]?\\d{3}[-.\\s]?\\d{4}$"
      }
    },
    {
      "field_id": "owner_address",
      "type": "text",
      "label": "Street Address",
      "required": true
    },
    {
      "field_id": "owner_city",
      "type": "text",
      "label": "City",
      "required": true
    },
    {
